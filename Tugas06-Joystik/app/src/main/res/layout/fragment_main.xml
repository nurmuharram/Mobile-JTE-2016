<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.tugas06_joystik.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atas"
        android:id="@+id/atasbtn"
        android:layout_above="@+id/kiribtn"
        android:layout_toRightOf="@+id/kiribtn"
        android:layout_toEndOf="@+id/kiribtn"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan"
        android:id="@+id/kananbtn"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bawahbtn"
        android:layout_toEndOf="@+id/bawahbtn"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiri"
        android:id="@+id/kiribtn"
        android:layout_alignTop="@+id/kananbtn"
        android:layout_toLeftOf="@+id/bawahbtn"
        android:layout_toStartOf="@+id/bawahbtn"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bawah"
        android:id="@+id/bawahbtn"
        android:layout_below="@+id/kiribtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton" />
</RelativeLayout>
